<Game_Screen>:
    name: 'gameScreen'
    #on_enter: root.Screen_Size_Calcs()
    CustomLayout:
        Image:
        	id: backGroundImage
            source: './images/simpleTable.jpg'
            allow_stretch: True
            keep_ratio: False
    BoxLayout:
        orientation: 'vertical'
        FloatLayout:
            id: infoFloat
            size_hint_y: 0.35
            #on_size: root.Main_Float_Resize()
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 0.3
                #Rectangle:
                #    pos: self.pos
                #    size: self.size
                Line:
                    id:p1
                    circle: self.center_x + root.circleXoffset, self.center_y + self.height * root.circleScale - root.circleYoffset, self.height * root.circleScale, 90, 180
                Line:
                    id:p2
                    circle: self.center_x + root.circleXoffset, self.center_y + self.height * root.circleScale - root.circleYoffset, self.height * root.circleScale, 180, 270
                Line:
                    id:p3
                    circle: self.center_x + root.circleXoffset, self.center_y + self.height * root.circleScale - root.circleYoffset, self.height * root.circleScale, 270, 360
                Line:
                    id:p4
                    circle: self.center_x + root.circleXoffset, self.center_y + self.height * root.circleScale - root.circleYoffset, self.height * root.circleScale, 0, 90
                Line:
                    points: self.center_x + root.circleXoffset - self.height * root.circleScale, self.center_y + self.height * root.circleScale - root.circleYoffset, self.center_x + root.circleXoffset + self.height * root.circleScale, self.center_y  + self.height * root.circleScale - root.circleYoffset
                    width: 1
                Line:
                    points: self.center_x + root.circleXoffset, self.center_y + (self.height * (root.circleScale * 2)) - root.circleYoffset, self.center_x + root.circleXoffset, self.center_y - root.circleYoffset
                    width: 1
            Image:
                id: tableImage
                size_hint: 0.5, 0.55
                allow_stretch: True
                keep_ratio: False
                #width: self.texture_size[0]
                #height: self.texture_size[1]
                pos: infoFloat.center_x + root.circleXoffset - (self.width / 2.025), infoFloat.center_y + (infoFloat.height * root.circleScale) - root.circleYoffset - self.height / 2
                source: './images/table.png'
            Label:
                id: dealerLabel
                #size_hint: 0.045, 0.045
                size_hint: None, None
                size: infoFloat.height * root.circleScale / 13, infoFloat.height * root.circleScale / 13
                pos: infoFloat.center_x - (infoFloat.height * root.circleScale / 6) + root.circleXoffset, infoFloat.center_y + (infoFloat.height * root.circleScale) - root.circleYoffset + (infoFloat.height * root.circleScale / 6)
                canvas.before:
                    Color:
                        rgba: 1, 1, 0, 1
                    Line:
                        circle: self.center_x, self.center_y, self.width * 0.2, 0, 360
                        width: self.width
                canvas.after:
                    Color:
                        rgba: 0, 0.2, 0.8, 1
                    Line:
                        circle: self.center_x, self.center_y, self.width, 0, 360
                        width: self.width * 0.2

            Label:
                id: p1nameLabel
                bold: True
                size_hint: None, None
                #size: infoFloat.height * root.circleScale, infoFloat.height  * 0.05
                font_name: './fonts/Hack-Bold.ttf'
                text: ''
                font_size: '10sp'
                font_name: './fonts/Hack-Bold.ttf'
                width: self.texture_size[0]
                height: self.texture_size[1]
                pos: infoFloat.center_x + root.circleXoffset - (self.width / 2) + (infoFloat.height * root.circleScale * 0.8), infoFloat.center_y + (infoFloat.height * root.circleScale * 1.8) - root.circleYoffset - self.height / 2
                canvas.before:
                    PushMatrix
                    Rotate:
                        axis: 0,0,1
                        angle: 315
                        origin: self.center
                canvas.after:
                    Color:
                        rgba: 0.1, 0.5, 0.1, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    PopMatrix
            Label:
                id: p2nameLabel
                size_hint: None, None
                #size: infoFloat.height * root.circleScale, infoFloat.height  * 0.05
                font_name: './fonts/Hack-Bold.ttf'
                text: ''
                font_size: '10sp'
                font_name: './fonts/Hack-Bold.ttf'
                width: self.texture_size[0]
                height: self.texture_size[1]
                pos: infoFloat.center_x + root.circleXoffset - (self.width / 2) + (infoFloat.height * root.circleScale * 0.8), infoFloat.center_y + (infoFloat.height * root.circleScale * 0.3) - root.circleYoffset - self.height / 2
                canvas.before:
                    PushMatrix
