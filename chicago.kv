<Shop_Screen>:
    name: 'shopScreen'
    CustomLayout:
        id: shopFullScreen
        Image:
            source: './images/greenTable.jpg'
            allow_stretch: True
            keep_ratio: False
	BoxLayout:
		id: outerShopBL
	    orientation: 'vertical'
	    Label:
	        size_hint: 1, 0.2
	    Label:
	        id: shopHeading
	        text: "Chicago Shop"
	        size_hint: 1, 0.05
	        font_name: './fonts/BrokenGlass.ttf'
	        font_size: self.width * 0.08
	    Label:
	        size_hint: 1, 0.2
	    BoxLayout:
	    	orientation: 'horizontal'
	    	Label:
	        	size_hint: 0.02, 1
		    GridLayout:
		    	size_hint: 0.8, 1
		    	id: innerShopGL
		    	cols: 3
	    	Label:
	        	size_hint: 0.02, 1
	    BoxLayout:
	        orientation: 'horizontal'
	        Label:
	            size_hint: 0.4, 0.3
	        Button:
	            id: shopCloseButton
	            text: 'Back'
	            size_hint: 0.2, 0.2
	            on_press: root.manager.current = 'menuScreen'
	        Label:
	            size_hint: 0.4, 0.3
	    Label:
	        size_hint: 1, 0.2
<Game_Over_Screen>:
    name: 'gameOverScreen'
    on_enter: root.Game_OverScreen_Load()
    CustomLayout:
        id: gameOverFullScreen
        Image:
            source: './images/greenTable.jpg'
            allow_stretch: True
            keep_ratio: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, 0.075
        Label:
            id: prettyHeading
            size_hint: 1, 0.11
            font_name: './fonts/BrokenGlass.ttf'
            font_size: self.width * 0.09
        BoxLayout:
            size_hint: 1, 1
            orientation: 'horizontal'
            Label:
                size_hint: 0.05, 1
            ScrollView:
                bar_width: 6
                bar_color: 0.03, 0.2, 0.2, 0.9
                bar_inactive_color: 0.05, 0.3, 0.3, 0.8
                Label:
                    id: prettyLabel
                    markup: True
                    text_size: self.width, None  # Set the text wrap box width
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_x: 8
                    canvas.after:
                        Color:
                            rgba: 0, 0.5, 0, 0.35
                        Rectangle:
                            pos: self.pos
                            size: self.size
            Label:
                size_hint: 0.05, 1
        BoxLayout:
            size_hint: 1, 0.1
            orientation: 'horizontal'
            Label:
                size_hint: 0.4, 1
            Button:
                id: closePrettyButton
                text: 'OK'
                size_hint: 0.1, 1
                #disabled: True
                #background_color: 0,0,0,0
                on_press: root.manager.current = 'menuScreen'
            Label:
                size_hint: 0.4, 1
        Label:
            size_hint: 1, 0.1

<Menu_Screen>:
    name: 'menuScreen'
    on_enter: root.MenuScreen_Checks()
